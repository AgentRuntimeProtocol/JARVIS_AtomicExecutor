FROM python:3.11-slim

ENV PYTHONDONTWRITEBYTECODE=1 \
    PYTHONUNBUFFERED=1

WORKDIR /app

COPY JARVIS_AtomicNodes ./JARVIS_AtomicNodes
COPY JARVIS_AtomicExecutor ./JARVIS_AtomicExecutor

RUN python -m pip install --upgrade pip && \
    python -m pip install --no-cache-dir "./JARVIS_AtomicNodes[runtime]" && \
    python -m pip install --no-cache-dir ./JARVIS_AtomicExecutor

CMD ["arp-jarvis-atomic-executor", "--host", "0.0.0.0", "--port", "8082"]
